// CRIAR ESQUEMA dac 
create table tb_usuarios(
id BIGINT NOT NULL PRIMARY KEY,
nome varchar(200),
email varchar(200),
senha varchar(200),
perfil varchar(200));



//CRIAR ESQUEMA dac_clientes
create table tb_clientes(
id BIGINT NOT NULL PRIMARY KEY AUTO_INCREMENT,
nome varchar(200),
email varchar(200),
senha varchar(200),
cpf varchar(11),
aprovado varchar(15),
salario double,
conta int,
endereco int);

create table tb_endereco(
id int PRIMARY KEY,
numero int,
tipo varchar(20),
logradouro varchar(200),
complemento varchar(200),
cep varchar(8),
bairro varchar(200),
cidade varchar(200),
estado varchar(2)
);

/CRIAR ESQUEMA dac_contas
create table tb_conta(
id int PRIMARY KEY,
conta int , 
criacao date, 
limite double,
historico varchar(200),
saldo_conta double);


alter table tb_clientes 
add constraint foreign key(conta) references dac_contas.tb_conta(id);

alter table tb_clientes 
add constraint foreign key(endereco) references tb_endereco(id)

insert into tb_clientes values (1, "teste", "teste@teste.com", "teste", "09809809809", "aprovado", 2332.32, 1, null)
insert into tb_conta values (1, 123, now(), 2000, 'teste', 1233.33)